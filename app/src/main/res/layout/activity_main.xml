<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.omaralashi.omaralashi.shakethedice.MainActivity">

    <ImageView
        android:id="@+id/dice1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="216dp"
        android:layout_alignTop="@+id/dice2"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/dice2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:layout_editor_absoluteX="218dp"
        tools:layout_editor_absoluteY="216dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/dice1txt"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignEnd="@+id/dice1"
        android:layout_below="@+id/dice1"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="38dp" />

    <TextView
        android:id="@+id/dice2txt"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/dice1txt"
        android:layout_marginEnd="44dp" />


</RelativeLayout>
